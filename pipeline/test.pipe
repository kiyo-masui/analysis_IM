pipe_modules.append(flag_data.FlagData)
fd_input_root = out_root
fd_file_middles = file_middles
fd_input_end = ha_output_end
fd_output_root = out_root
fd_output_end = ".testflag.fits"
fd_scans = ()
fd_IFs = ()
